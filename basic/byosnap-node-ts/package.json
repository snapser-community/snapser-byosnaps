{
  "name": "byosnap-node-ts",
  "version": "1.0.0",
  "description": "BYOSnap written in Node.js with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run build:swagger",
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "build:routes": "tsoa routes",
    "build:swagger": "tsoa spec && ts-node scripts/fix-openapi-descriptions.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "joi": "^17.13.3",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.0.0",
    "@types/joi": "^17.2.2",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
